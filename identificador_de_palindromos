frase = str(input('Digite uma frase: ')).strip().upper()
palavras = frase.split()
junto = ''.join(palavras)
inverso = ''
for c in range(len(junto) - 1, -1, -1):
    inverso = inverso + junto[c]
print(junto, inverso)
if inverso == junto:
    print('É PALÍNDROMO.')
else:
    print('Não é PALÍNDROMO.')
